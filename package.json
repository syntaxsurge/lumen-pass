{
  "name": "scaffold-stellar",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "npm run dev --workspace=@lumen-pass/web",
    "contracts:watch": "stellar scaffold watch --build-clients",
    "start": "npm run start --workspace=@lumen-pass/web",
    "build": "stellar scaffold build && npm run build --workspace=@lumen-pass/web",
    "lint": "npm run lint --workspace=@lumen-pass/web",
    "install:contracts": "npm install --workspace=packages && npm run build --workspace=packages"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  }
}
